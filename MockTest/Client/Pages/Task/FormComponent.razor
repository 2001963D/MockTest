

<EditForm Model="@test" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Task Name: </label>
            <div>
                <InputText @bind-Value="test.TaskName" class="form-control" />
                <ValidationMessage For="@(() => test.TaskName)" />
            </div>
        </div>

        <div class="form-group">
            <label>Completion: </label>
            <div>
                <InputCheckbox @bind-Value="test.IsCompleted" class="form-control" />
                <ValidationMessage For="@(() => test.IsCompleted)" />
            </div>
        </div>

        <div class="form-group">
            <label>Due Date: </label>
            <div>
                <InputDate @bind-Value="test.DueDate" class="form-control" />
                <ValidationMessage For="@(() => test.DueDate)" />
            </div>
        </div>

    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="tests" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Test test { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }


}
